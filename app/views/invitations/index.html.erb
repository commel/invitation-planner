<%= link_to new_event_invitation_path(@event), class: "btn btn-success btn-block btn-lg" do %>
  <span class="glyphicon glyphicon-plus"></span>
<% end %>

<div class="list-group">
  <% @invitations.each do |invitation| %>
  <%= link_to edit_event_invitation_path(@event, invitation), class: "list-group-item" do %>
      <h4 class="list-group-item-heading"><%= invitation.name %></h4>
      <p>
        <ul class="list-inline">
          <li><%= invitation.invited %></li>
          <li><%= invitation.accepted %></li>
          <li><%= invitation.payed %></li>
        </ul>
      </p>
    <% end %>
  <% end %>
</div>

